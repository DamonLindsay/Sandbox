<ChampionInfoLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    Label:
        text: "Champion Information App"
        font_size: 24
        size_hint_y: None
        height: self.texture_size[1] + 20

    BoxLayout:
        orientation: "horizontal"
        spacing: 10

        Label:
            text: "Enter Champion Name:"

        TextInput:
            id: champion_input
            multiline: False
            font_size: 16

    ScrollView:
        size_hint_y: None
        height: 200
        Label:
            id: info_label
            text: ""
            font_size: 16
            size_hint_y: None
            height: self.texture_size[1]

    Label:
        id: title_label
        text: ""
        font_size: 18

    Label:
        id: url_label
        text: ""
        font_size: 14

    BoxLayout:
        spacing: 10
        Button:
            text: "Search"
            font_size: 18
            on_release: app.search_champion()

        Button:
            text: "Clear"
            font_size: 18
            on_release: app.clear_info()